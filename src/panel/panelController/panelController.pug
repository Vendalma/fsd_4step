mixin panel-controller(id="")
  .panel.js-panel(id=id)
    .panel__column 
      -const range = `range${id}`
      p.panel__text Количество ползунков
      .panel__row
        .panel__block
          label.panel__label 
            input(type="radio" 
              name=range 
              class="panel__radio"
              class="panel__radio_type_single"
              class="js-panel__radio_type_single")
            span.panel__text Один
        .panel__block
          label.panel__label 
            input(type="radio" 
              name=range 
              class="panel__radio" 
              class="panel__radio_type_double"
              class="js-panel__radio_type_double")  
            span.panel__text Два       
    .panel__column
      p.panel__text Вид слайдера
      -const orientation = `orientation${id}`
      .panel__row
        .panel__block
          label.panel__label 
            input(type="radio" 
              name=orientation 
              class="panel__radio" 
              class="panel__radio_type_horizontal"
              class="js-panel__radio_type_horizontal")
            span.panel__text Горизонтальный
        .panel__block
          label.panel__label 
            input(type="radio" 
              name=orientation 
              class="panel__radio"
              class="panel__radio_type_vertical"
              class="js-panel__radio_type_vertical")
            span Вертикальный
    .panel__column
      .panel__block
        label.panel__label
          input(type="checkbox" 
            name="label" 
            class="panel__checkbox" 
              class="panel__checkbox_type_label"
            class="js-panel__checkbox_type_label")
          span.panel__text Показать значение ползунка
    .panel__column
      .panel__row
        label.panel__label.panel__label_position_center Min
          input(type="number" 
            step = "any" 
            class="panel__input"
            class="panel__input_size_m" 
              class="panel__input_type_min"
            class="js-panel__input_type_min")
      .panel__row
        label.panel__label.panel__label_position_center Max
          input(type="number" 
            step = "any" 
            class="panel__input"
            class="panel__input_size_m" 
            class="panel__input_type_max"
            class="js-panel__input_type_max")
    .panel__column
      .panel__row
        label.panel__label.panel__label_position_center Шаг
          input(type="number" 
            step = "any" 
            class="panel__input"
            class="panel__input_size_m" 
            class="panel__input_type_step"
            class="js-panel__input_type_step")
    .panel__column
      .panel__row
        label.panel__label.panel__label_position_center Ползунок №1 
          input(type="number" 
            step = "any" 
              class="panel__input" 
              class="panel__input_size_s"
              class="panel__input_type_from"
              class="js-panel__input_type_from")
      .panel__block_row
        label.panel__label.panel__label_position_center Ползунок №2
          input(type="number" 
            step = "any" 
            class="panel__input" 
            class="panel__input_size_s"
            class="panel__input_type_to" 
            class="js-panel__input_type_to" 
            class="js-panel__input_disabled")