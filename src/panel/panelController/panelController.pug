mixin panel-controller(id="")
  .slider__panel.panel.js-panel(id=id)
    .panel__block_column Количество ползунков
      -const range = `range${id}`
      .panel__block_row
        .panel__block
          label.panel__label 
            input(type="radio" 
              name=range 
              class="panel__radio"
              class="js-panel__radio-single")
            span Один
        .panel__block
          label.panel__label 
            input(type="radio" 
              name=range 
              class="panel__radio" 
              class="js-panel__radio-double")  
            span Два       
    .panel__block_column Вид слайдера
      -const orientation = `orientation${id}`
      .panel__block_row
        .panel__block
          label.panel__label 
            input(type="radio" 
              name=orientation 
              class="panel__radio" 
              class="js-panel__radio-horizontal")
            span Горизонтальный
        .panel__block
          label.panel__label 
            input(type="radio" 
              name=orientation 
              class="panel__radio" 
              class="js-panel__radio-vertical")
            span Вертикальный
    .panel__block_column
      .panel__block
        label.panel__label
          input(type="checkbox" 
            name="label" 
            class="panel__checkbox" 
            class="js-panel__checkbox-label")
          span Показать значение ползунка
    .panel__block_column
      .panel__block_row
        label.panel__label.panel__label_flex  
          span Min
          input(type="number" 
            step = "any" 
            class="panel__input panel__input_medium" 
            class="js-panel__input-min")
      .panel__block_row
        label.panel__label.panel__label_flex  
          span Max
          input(type="number" 
            step = "any" 
            class="panel__input panel__input_medium"
            class="js-panel__input-max")
    .panel__block_column
      .panel__block_row
        label.panel__label.panel__label_flex 
          span Шаг
          input(type="number" 
            step = "any" 
            class="panel__input"
            class="panel__input_medium"
            class="js-panel__input-step")
    .panel__block_column
      .panel__block_row
        label.panel__label.panel__label_flex
          span Ползунок №1 
          input(type="number" 
            step = "any" 
              class="panel__input" 
              class="panel__input_short"
              class="js-panel__input-from")
      .panel__block_row
        label.panel__label.panel__label_flex
          span Ползунок №2
          input(type="number" 
            step = "any" 
            class="panel__input" 
            class="panel__input_short"
            class="js-panel__input-to" 
            class="js-panel__input_disabled")